<%= render "shared/navbar" %>
<!--Spacer lol-->
<div class="h-28"></div>
<main class="bg-lime-50 w-full flex flex-col items-center justify-center">
  <!--Container for contents-->
  <div class="text-center lg:w-3/5 md:w-4/5">
    
    <h1 class="font-bold text-4xl py-10">Your message has been sent!</h1>
    
    <!--Container for check-->
    <div class="flex flex-row justify-center">
      <!--circle of check-->
      <div class="bg-lime-300 rounded-full py-3 px-4 mb-10">
        <!--check itself-->
        <div class="text-lime-500 text-5xl">âœ“</div>
      </div>
    </div>
    
    
    <%#-- The message (lol, i used a "notice" to bring the message data to this page hahahaha) --%>
