

<section class="px-5 pb-10 flex flex-col items-center w-full">
  <div class="w-full lg:w-1/2">
    <%= form_with(model: message, class: "contents") do |form| %>
    <%# FOR FORM VALIDATION %>
    <% keygen = random_number %>


    <%# FOR ERRORS %>
    <div class="px-10">
      <% if notice.present? %>
        <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg h-full" id="notice"><%= notice %></p>
      <% end %>
      <% if alert.present? %>
        <p class="py-2 px-3 bg-red-50 mb-5 text-red-500 font-medium rounded-lg h-full" id="alert"><%= alert %></p>
      <% end %>
    </div>
    <% if message.errors.any? %>
      <div id="error_explanation" class="bg-red-50 text-red-500 px-3 mx-10 py-2 font-medium rounded-lg mt-3">
        <h2><%= pluralize(message.errors.count, "error") %> prohibited this message from being sent:</h2>

        <ul>
          <% message.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

      <div class="my-5">
        <%= form.text_field :name, placeholder: "Name", class: "block shadow rounded-md border border-gray-200 outline-none px-3 w-full focus:border-lime-600 focus:ring-lime-600 placeholder:text-sm" %>
      </div>

      <div class="my-5">
        <%= form.email_field :email, placeholder: "E-mail", class: "block shadow rounded-md border border-gray-200 outline-none px-3 w-full focus:border-lime-600 focus:ring-lime-600 placeholder:text-sm" %>
      </div>

      <div class="my-5">
        <%= form.text_field :phone, placeholder: "Phone number", class: "block shadow rounded-md border border-gray-200 outline-none px-3 w-full focus:border-lime-600 focus:ring-lime-600 placeholder:text-sm" %>
      </div>

      <div class="my-5">
        <%= form.text_area :content, rows: 4, placeholder: "Your message", class: "block shadow rounded-md border border-gray-200 outline-none px-3 w-full focus:border-lime-600 focus:ring-lime-600 placeholder:text-sm" %>
      </div>

      <%# FORM VALIDATION%>
      <div class="my-5">
        <%= form.text_field :validation_text, placeholder: "Answer the question: #{sentence_generator(keygen)} = ?", class: "block shadow rounded-md border border-gray-200 outline-none px-3 w-full focus:border-lime-600 focus:ring-lime-600 placeholder:text-sm" %>
        <%= form.hidden_field :key, :value => keygen  %>
      </div>  

      <%= recaptcha_tags %><br>

      <div class="inline">
        <%= form.submit "Send it!", class: "rounded-lg w-full py-3 px-5 bg-lime-200 hover:bg-lime-300 text-lime-900 inline-block font-medium cursor-pointer" %>
      </div>
    <% end %>
  </div>
</section>